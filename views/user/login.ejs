<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <h3 class="col-6 offset-3 mt-3 mb-3">Login</h3>
    <div class="col-6 offset-3">
        <form class="needs-validation" action="/login" method="post" novalidate>
            <div class="mt-2 mb-3">
                <label for="username" class="form-label">Username</label>
                <input class="form-control" type="text" name="username" placeholder="Enter username" required>
                <div class="valid-feedback">username looks good!</div>
                <div class="invalid-feedback">Enter a valid username</div>
            </div>
            <div class="mt-2 mb-3">
                <label for="password" class="form-label">Password</label>
                <input class="form-control" type="password" name="password" placeholder="Enter password" required>
                <div class="valid-feedback">password looks good!</div>
                <div class="invalid-feedback">Enter a valid password</div>
            </div>
            <div class="mt-2 mb-3">
                <button class="btn btn-dark red-button">login</button>
            </div>
        </form>
    </div>
</div>